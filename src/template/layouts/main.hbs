<!DOCTYPE html>
<html lang="en">
	<head>
		{{> include/_head}}

		<!-- Optional: page related CSS-->
		{{#>head-block}}{{/head-block}}
	</head>
	<body id="index" class="mod-bg-1">
		
		{{!-- save-settings-script --}}
		{{> include/_scripts-loading-saving}}
		
		<!-- BEGIN #page-wrapper -->
		<div id="page-wrapper" class="clearfix">

			<!-- BEGIN #left-panel -->
			{{> include/_left-panel }}
			<!-- END #left-panel -->
			
			<!-- BEGIN HEADER -->
			{{> include/_page-header }}
			<!-- END HEADER -->

			<!-- BEGIN #content -->
			<main id="content" role="main">
				{{> include/_page-breadcrumb }}
				{{> include/_page-heading }}
				{{#>content-block}}{{/content-block}}
			</main>
			<!-- END #content -->

			<!--{{#if splitcontent}}
			<div id="splitcontent">
				{{#> splitcontent-block}}{{/splitcontent-block}}
			</div>
			{{/if}}-->

			<!-- BEGIN footer -->
			{{> include/_page-footer }}
			<!-- END footer -->

			<!-- BEGIN .app-shortcut -->
			{{> include/_shortcut }}
			<!-- END .app-shortcut -->

			<!-- BEGIN #right-panel -->
			{{> include/_right-panel }}
			<!-- END #right-panel -->

		</div>
		<!-- END #page-wrapper -->

		{{!-- Google Analytics  code if GOOGLE_ANALYTICS_ID id available --}}
		{{#if GOOGLE_ANALYTICS_ID}}
			<script>
			  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

			  ga('create', '{{GOOGLE_ANALYTICS_ID}}', 'auto');
			  ga('send', 'pageview');

			</script>
		{{/if}}
		{{> include/_scripts-base-plugins}}
		{{#>scripts-block}}
			{{!-- Custom scripts per page can be added. --}}
		{{/scripts-block}}
	</body>
</html>