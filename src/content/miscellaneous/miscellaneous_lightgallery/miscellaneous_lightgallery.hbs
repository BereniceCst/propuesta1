{{#*inline "scripts-block"}}
	<!-- currently bundled with justified-gallery to make all images absolutely responsive based on screen size -->
	<script src="js/miscellaneous/lightgallery/lightgallery.bundle.js"></script>
	<script>
		$(document).ready(function () {
			 // Animated thumbnails
				var $animThumb = $('#animated-thumbnials');
				if ($animThumb.length) {
					$animThumb.justifiedGallery({
						border: 6
					}).on('jg.complete', function() {
						$animThumb.lightGallery({
							thumbnail: true
						});
					});
				};			
		});
	</script>
