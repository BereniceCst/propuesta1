/* #THEME variable overrides
   NAME: Amethyst
========================================================================== */
$color-primary:         							#824bd8;
$color-fusion: 										darken(desaturate(adjust-hue($color-primary, 5), 35%), 10%); 
$color-warning:         							lighten(saturate(adjust-hue($color-primary, 120), 12%), 2%);
$color-danger:          							darken(saturate(adjust-hue($color-primary, 80), 5%), 2%);

/* #GLOBAL IMPORTS
========================================================================== */
@import './src/scss/_imports/_theme-modules-import';


