<!DOCTYPE html>
<html lang="en">
	<head>
		{{> _common/_head/_head}}

		<!-- Optional: Page related CSS-->
		{{#> head-block}}{{/head-block}}
	</head>
	<body id="index" class="mod-bg-1">
		
		{{!-- SAVE SETTINGS SCRIPT --}}
		{{> _common/_scripts/loading-saving}}
		
		<!-- BEGIN WRAPPER -->
		<div id="page-wrapper" class="clearfix">

			<!-- BEGIN LEFT PANEL -->
			{{> _common/_left-panel }}
			<!-- END LEFT PANEL -->
			
			<!-- BEGIN HEADER -->
			{{> _common/_page-header }}
			<!-- END HEADER -->

			<!-- BEGIN CONTENT -->
			<main id="content" role="main">
				{{> _common/_page-breadcrumb }}
				{{> _common/_page-heading }}
				{{#> content-block}}{{/content-block}}
			</main>
			<!-- END CONTENT -->

			<!--{{#if splitcontent}}
			<div id="splitcontent">
				{{#> splitcontent-block}}{{/splitcontent-block}}
			</div>
			{{/if}}-->

			<!-- BEGIN FOOTER -->
			{{> _common/_page-footer }}
			<!-- END FOOTER -->

			<!-- BEGIN SHORTCUT BUTTONS -->
			{{> _common/_shortcut }}
			<!-- END SHORTCUT BUTTONS -->

			<!-- BEGIN RIGHT PANEL -->
			{{> _common/_right-panel }}
			<!-- END RIGHT PANEL -->

		</div>
		<!-- END WRAPPER -->

		{{!-- Google Analytics  code if GOOGLE_ANALYTICS_ID id available --}}
		{{#if GOOGLE_ANALYTICS_ID}}
			<script>
			  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

			  ga('create', '{{GOOGLE_ANALYTICS_ID}}', 'auto');
			  ga('send', 'pageview');

			</script>
		{{/if}}
		{{> _common/_scripts/base-plugins}}
		{{#> scripts-block}}
			{{!-- Custom scripts per page can be added. --}}
		{{/scripts-block}}
	</body>
</html>